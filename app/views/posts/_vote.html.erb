<div class="span0 well text-center">
    <%= link_to path.call(resource, vote: true), method: 'post' do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br/>
    <%= "#{resource.total_votes} #{resource.total_votes.abs == 1 ? 'vote' : 'votes'}" %>
    <br/>
    <%= link_to path.call(resource, vote: false), method: 'post' do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>