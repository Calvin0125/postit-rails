<% posts.each do |post|%>
  <%= render 'posts/vote', resource: post, path: method(:vote_post_path) %>
  <div class="row">
    <div class='span8 well'>
      <%= render post.categories %>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <p><%= post.description %></p>
      <p>
        <span class="quiet">posted by <%= post.user.username %></span>
        <small>at <%= fix_time(post.created_at) %></small>
      </p>
      <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
      </small>
    </div>
  </div>
<% end %>